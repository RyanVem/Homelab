# Where Immich stores uploaded media
UPLOAD_LOCATION=/mnt/ImmichLibrary

# Where Postgres stores DB data
DB_DATA_LOCATION=/mnt/ImmichPostgres

# Adjust the timezone if you want
# TZ=Etc/UTC

# Pin to a specific Immich release if desired, or leave as 'release' for latest
IMMICH_VERSION=release

# Database connection secret - use a strong random value (A-Za-z0-9, no spaces/special chars)
DB_PASSWORD=postgres

# Do not change these
DB_USERNAME=postgres
DB_DATABASE_NAME=immich